@model IEnumerable<HMS00.Models.Doctor>
<h2>Doctors</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Add Doctor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@doctor.DoctorId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@doctor.DoctorId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
