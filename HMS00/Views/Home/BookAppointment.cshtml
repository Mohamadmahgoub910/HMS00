@model IEnumerable<HMS00.Models.Doctor>
@{
    int page = ViewBag.Page;
    int pageSize = ViewBag.PageSize;
    int totalItems = ViewBag.TotalItems;
    string searchTerm = ViewBag.SearchTerm ?? "";
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
}

<h1>Book Appointment</h1>

<form method="get" class="mb-4 d-flex gap-2">
    <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by name or specialization" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="@Url.Action("BookAppointment")" class="btn btn-secondary">Reset</a>
</form>

<div class="row">
    @foreach (var doctor in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <img class="card-img-top"
                     src="@(!string.IsNullOrEmpty(doctor.ImageUrl) ? doctor.ImageUrl : "/images/default-doctor.png")"
                     style="width: 100%; height: 200px; object-fit: cover;"
                     alt="@doctor.Name" />

                <div class="card-body">
                    <h5 class="card-title">@doctor.Name</h5>
                    <p class="card-text">
                        <strong>Specialization:</strong> @doctor.Specialization
                    </p>
                    <a asp-controller="Appointments" asp-action="Create" asp-route-doctorId="@doctor.DoctorId"
                       class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("BookAppointment", new { page = i, searchTerm = searchTerm })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
